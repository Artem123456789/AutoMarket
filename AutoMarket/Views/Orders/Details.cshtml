@model AutoMarket.Models.Order

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Создан
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            Выполнен
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompletedView)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    @if (Model.Items.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.CarDetail.Name</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                            <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id">Удалить</a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
