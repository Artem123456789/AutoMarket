@model AutoMarket.Models.Item

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать</h1>

<h4>Деталь в заказе</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="CarDetailId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="OrderId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Количество</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Orders" asp-action="Index">Обратно к списку</a>
</div>

